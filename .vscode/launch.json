    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Dbg 'smart-bench'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=smart-bench",
                ],
                "filter": {
                    "name": "smart-bench",
                    "kind": "bin"
                }
            },
            "args": [
                "wasm",
                "set-fee-to",
                "--instance-count",
                "10",
                "--call-count",
                "20"
            ],
            "cwd": "${workspaceFolder}"
        }
    ]
}